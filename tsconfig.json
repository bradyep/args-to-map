{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2020",
    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    // Recommended Options
    "strict": true,
